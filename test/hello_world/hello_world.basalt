let @saved join_count = 0;

fn txt(value: any): text {
  let @line temp: text;
  set_variable::styled_text(ref @line temp, @line value);

  return @line temp;
}

event player_event::join {
  let join_count_string: text;

  @saved join_count += 1;

  set_variable::styled_text(ref join_count_string, @saved join_count);

  player_action::send_message(
    "Join Count: ", join_count_string,

    alignment_mode='Centered',
    text_value_merging='Add spaces'
  );
}