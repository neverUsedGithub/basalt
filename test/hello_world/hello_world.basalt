let @saved join_count = 0;

fn txt(value: any): text {
  let temp = set_variable::styled_text(value) as text;
  return temp;
}

event player_event::join {
  @saved join_count += 1;
  
  let join_count_string = set_variable::styled_text(@saved join_count) as text;

  player_action::send_message(
    "Join Count: ", join_count_string,

    alignment_mode='Centered',
    text_value_merging='Add spaces'
  );
}